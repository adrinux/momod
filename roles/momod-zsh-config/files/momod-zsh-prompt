# enable substitution for prompt
setopt prompt_subst
# momod Ubuntu prompt
PROMPT="%B%{$fg[orange]%}%(4~|%-1~/.../%2~|%~)%u%b >%{$fg[orange]%}>%B%(?.%{$fg[orange]%}.%{$fg[red]%})>%{$reset_color%}%b "
RPROMPT="%{$fg[red]%} %(?..[%?])"
# Print a greeting message when shell is started
echo $USER@$HOST  $(uname -srm) $(lsb_release -rcs)